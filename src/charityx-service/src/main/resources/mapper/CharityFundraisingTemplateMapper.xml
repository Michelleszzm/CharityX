<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.charity.x.dao.CharityFundraisingTemplateDao">

    <resultMap id="VoMap" type="com.charity.x.dto.vo.CharityFundraisingTemplateVo">
        <result column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="code" property="code"/>
    </resultMap>

    <sql id="Business_Column">
        id, name,code
    </sql>

    <insert id="save">
        insert into charity_fundraising_template (user_id, nonprofit_name, proof_image)
        values (#{userId}, #{nonprofitName}, #{proofImage})
    </insert>

    <select id="getByUserId" resultMap="VoMap">
        select <include refid="Business_Column"/>
        from charity_nonprofit
        where user_id = #{userId}
    </select>

    <select id="queryList" resultMap="VoMap">
        select <include refid="Business_Column"/>
        from charity_fundraising_template
    </select>


</mapper>